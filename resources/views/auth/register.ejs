<section class="login w-full flex justify-center pt-24 ">

    <div class="w-full max-w-xs">
        <form action="/register" method="POST" class="bg shadow-md rounded px-8 pt-6 pb-8 mb-4">
   
    <% if(messages.error){ %>        
            <span class="text-red-500"><%= messages.error %> </span>
        <% } %>
            <div class="mb-4">
                <label class="block text-gray-900 text-sm font-bold mb-2" for="name">
                    Name
                </label>
                <input 
                name="name" value="<%= messages.name %>"
                    class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
                    id="text" type="text" placeholder="Enter your name" />
            </div>
            <div class="mb-4">
                <label class="block text-gray-900 text-sm font-bold mb-2" for="email">
                    Email
                </label>
                <input
                name="email" value="<%= messages.email %>"
                    class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
                    id="email" type="email" placeholder="Enter your email" />
            </div>
            <div class="mb-6">
                <label class="block text-gray-900 text-sm font-bold mb-2" for="password">
                    Password
                </label>
                <input
                name="password"
                    class="shadow appearance-none border  rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline"
                    id="password" type="password" placeholder="******************" />

            </div>
            <div class="flex items-center justify-between">
                <button
                    class="add-to-cart  rounded-full text-white font-bold py-2 px-1 rounded focus:outline-none focus:shadow-outline"
                    type="Submit">
                   Register
                </button>
                <a class="inline-block already-acc align-baseline font-bold text-sm text-black-500 hover:text-white-800"
                    href="/login">
                    Already have account! 
                </a>
            </div>
        </form>
    
        </p>
        
    </div>
</section>
<div class="back-login">
    <img src="/images/tree-1801519.png" alt="">
</div>