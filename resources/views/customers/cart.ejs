<div>
  <section class="cart py-16">
    <% if(session.cart){%>
    <div class="order container mx-auto w-1/2">
      <div class="flex items-center border-b border-gray-300 pb-4">
        <img
          src="/images/shopping-cart-307772_1280.png"
          width="40px"
          height="40px"
          alt=""
        />
        <h1 class="font-bold ml-4 text-2xl">order Summary</h1>
      </div>
      <div class="order-list">
        <% for(let food of Object.values(session.cart.items)) { %>
        <div class="flex items-center my-8">
          <img class="w-24" src="/images/<%= food.item.image %>" alt="" />
          <div class="ml-4 flex-1">
            <h1><%= food.item.name %></h1>
          </div>
          <span class="flex-1">
            <%= food.qty %>
          </span>
          <span class="font-bold text-lg">
            â‚¹ <%= food.item.price * food.qty %>
          </span>
        </div>
        <% } %>
        <div>
          <hr />
          <div class="text-right py-4">
            <div>
              <span class="text-lg font-bold">Total Amount:</span>
              <span class="amount text-2xl font-bold ml-2"
                >â‚¹ <%= session.cart.totalPrice %></span
              >
            </div>
          </div>
          <% if(user) { %>
          <div>
          <form action="/orders" method="POST" class="mt-12">
            <input
            name="phone"
              placeholder="Phone Number"
              class="border inputText border-gray-400 mb-4 p-2 w-1/2"
              type="text"
            
            />
            <input
             name="address"
              placeholder="Address"
              class="border inputText border-gray-400  mb-4 p-2 w-1/2"
              type="text"
           
            />
            <div>
              <button
              class="add-to-cart px-6 py-2 rounded-full text-white font-bold mt-6"
              type="submit"
            >
              order now
            </button>
            </div>
          </form>
        </div>
        <% } else { %>

        <a
          href="/login"
          class="inline-block cursor-pointer add-to-cart px-6 py-2 rounded-full text-white font-bold mt-6"
        >
          Login to order
        </a>
          <% }  %>
      </div>
    </div>
    
    <% } else { %>

    <div class="empty-cart py-16">
      <div class="container mx-auto text-center">
        <h1 class="text-3xl font-bold mb-2">
          cart Empty ðŸ˜•
        </h1>
        <p class=" text-lg mb-12">
          You probably haven't orderd anything yet.
          <br />
          <br />

          To order , go to the product page
        </p>
        <img
          class="w-2/4 mx-auto"
          src="/images/detective-1424831_1280.png"
          alt="empty-cart"
        />

        <a
          href="/products"
          class="inline-block px-6 py-2 rounded-full add-to-cart text-white font-bold"
          >Go Back
        </a>
      </div>
    </div>
    <% } %>
  </section>
  <div>
    <img src="/images/tree-1751176.png" alt="" />
  </div>
</div>
